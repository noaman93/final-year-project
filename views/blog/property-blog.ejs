<% include ../partials/header %>
<div class="container" style="background-color:white; ">
    <h1><span style="font-weight: 800;">Property Blog</span> 
    <% if(currentUser && currentUser.username =="admin") { %>
    <a href="/property-blog/new" class="btn btn-primary pull-right" style="border-radius:2px;">Create New Blog</a>
    <% } %>
    </h1>
    
    <hr>
    <div style="border:5px solid rgba(0, 0, 0, 0.5); border-radius:15px; padding:10px;">
    <% blog.forEach(function(blogs){ %>
        <div class="row">
            <div class="col-sm-6">
                <img src="<%= blogs.image %>" style="width:100%; height:50%;" alt="">
            </div>
        </div><!--row-->
            
        <div class="row">
            <div class="col-sm-6" style="margin-bottom:10px;">
                <h1 style="font-weight: 700;"><%= blogs.title %></h1>
                <p><%= blogs.created.toDateString() %></p>
                <p><%= blogs.body.substring(0,100) %>.....</p>
                <a href="/property-blog/<%= blogs._id %>" class="btn btn-primary btn-lg" style="border-radius:2px;">Read More <i class="fa fa-chevron-right" aria-hidden="true"></i></a>
            </div>
        </div><!--row-->
        <hr class="hrBlog">
    <% }) %>
    </div>
    
</div>





<% include ../partials/footer %>
