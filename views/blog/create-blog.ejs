<% include ../partials/header %>

<div class="col-sm-6 col-sm-offset-3" style="margin-top: 20px; ">
<div class="well  " >
    <h1>New Blog</h1>
    <form action="/property-blog" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="titleBar">Title</label>
            <input class="form-control" type="text" id="titleBar" placeholder="Title" name="blog[title]">
        </div>
        
        <div class="form-group">
            <label for="imageBar">Upload Image</label>
            <input class="form-control" type="file" name="image" id="imageBar" >
        </div>
        
        <div class="form-group">
            <label for="contentBar">Blog</label>
            <textarea class="form-control" name="blog[body]" cols="30" rows="10" id="contentBar" placeholder="Type your blog here!!!" ></textarea>   
        </div>
        
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Submit" style="border-radius:5px;">
        </div>
            
        
    </form><!--form-->
</div><!--well-->
</div>

<% include ../partials/footer %>

