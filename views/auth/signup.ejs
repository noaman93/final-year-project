<% include ../partials/header %>


<div class="container">
   <h1>Create New Account</h1>
    <% if (error != 1) {%>
        <h2><%= error %></h2>
    <% } %>

    <div class="row">
       <div class="col-md-7">
           <div class="well">
            <form action="/signup" method="POST">
                <div class="form-group">
                    <label class="radio-inline">
                        <input value="privateOwner" name="userType" type="radio">
                        Private Owner
                    </label>
                    <label class="radio-inline">
                        <input value="realEstateAgent" name="userType" type="radio">
                        Real Estate Agent
                    </label>
                </div><!--form-group-->
                
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="inputFirstName">First Name:</label>
                            <input type="text" name="firstName" id="inputFirstName" placeholder="First Name" class="form-control">
                        </div><!--form-group-->
                    </div><!--col-md-5-->
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="inputLastName">Last Name:</label>
                            <input type="text" name="lastName" id="inputLastName" placeholder="Last Name" class="form-control">
                        </div><!--form-group-->
                    </div><!--col-md-5-->
                </div><!--row-->
                
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="inputUsername">User Name:</label>
                            <input type="text" name="username" id="inputUsername" class="form-control" placeholder="User Name">
                        </div><!--form-group-->
                    </div><!--col-->
                
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="inputPassword">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password">
                        </div><!--form-group-->
                    </div><!--col-->
                </div><!--row-->
                
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="inputEmail">Your Email Address:</label>
                            <input type="email" name="email" id="inputEmail" placeholder="noaman@gmail.com" class="form-control">
                        </div><!--form-group-->
                    </div><!--col-md-6-->
                </div><!--row-->
                
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="inputPhone">Phone Number(Optional)</label>
                            <input type="number" name="phoneNumber" id="inputPhone" class="form-control" placeholder="03xxxxxxxxx">
                        </div><!--form-group-->
                    </div><!--col-->
                    
                </div><!--row-->
                
                <div class="row">
                    <div class="col-sm-12 ">
                        <div class="form-group">
                            <input class="btn btn-primary" type="submit" value="Register My Account">
                        </div><!--form-group--> 
                    </div><!--col--> 
                </div><!--row-->
                
                
               
            </form>
          </div><!--well-->
       </div>
    </div><!--row-->
</div><!--container-->

<% include ../partials/footer %>
