<div class="main" >
<!-- Content Here -->
<div class="container">
   <% if(message){%>
      <div class="row well">
          <div class="col-sm-9">
           <h1 style="font-weight: 700;"><%= message %></h1>
           </div><!--col-->
       </div><!--row-->
   <%} else {%>   
   
   
    <div class="row">
        <div class="col-sm-9 ">
          <h1 class="well" style="font-weight: 700;font-size: 2.9em;">Properties Listed By You!</h1>
           <% user.properties.forEach(function(prop){ %>
            <div class="eachRow row" style="margin-bottom: 30px;">
                <div class="me col-sm-6">
                    <img class="search-image " src="<%= prop.image[0] %>" alt="Here image">
                </div>
                <div class="col-sm-6 search-block" >
                     <p class="propTitle"><%= prop.propertyTitle.substring(0,27) %>...</p>
                     <p class="propLocation"><%= prop.location.substring(0,41) %>...</p>
                     <% if(prop.purpose == "sale"){%>
                     <p class="propPrice">
                     Rs, <%= prop.price %>
                     </p><!--propPrice-->
                     <% } else { %>
                     <p class="propPrice">
                     Rent/Month <%= prop.price %>
                     </p><!--propPrice-->
                     <% } %>
                     <p class="propDescription"><%= prop.description.substring(0,100) %>.....</p>
                     <a href="/property/<%= prop._id %>" class="btn btn-primary">More Details</a>
                     <a href="#" class="btn btn-primary pull-right contactOwner">Contact Owner</a>
                     
                </div>
                <p class="date pull-right">Posted On:<%= prop.created.toDateString() %></p>
            </div><!--row-->
            <% }); %>
        </div>
    </div><!--outer row-->
    <%}%>
</div><!--container-->
</div><!--main-->


<% include ./partials/footer %>
